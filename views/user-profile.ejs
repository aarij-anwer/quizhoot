<!DOCTYPE html>
<html lang="en">

<head>
  <title>User profile</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Fonts -->
  <script src="https://kit.fontawesome.com/2bfd122b18.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/user-profile.css" />
  <link rel="stylesheet" href="/styles/footer.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <main>
      <h1>My profile</h1>
      <br><br>
      <div class="profile-layout">
        <div class="user-quizzes">
          <h2>My quizzes</h2>
          <br><br>
          <h3>Private</h3>
          <hr class="hr">
          <div class="private-quiz-container">
            <% for (let quiz of quizzes) { %>
              <% if (!quiz.public) { %>
                <div class="card">
                  <div class="card-body">
                    <h3 class="card-title"><%= quiz.title %></h3>
                    <p class="card-text"><%= quiz.description %></p>
                    <a href="/quizzes/quiz/<%= quiz.id %>" class="btn btn-primary">View the Quiz</a>
                  </div>
                </div>
             <% } %>
            <% } %>
          </div>
          <br><br>
          <h3>Public</h3>
          <hr class="hr">
          <div class="public-quiz-container"></div>
           <% for (let quiz of quizzes) { %>
            <% if (quiz.public) { %>
              <div class="card">
                <div class="card-body">
                  <h3 class="card-title"><%= quiz.title %></h3>
                  <p class="card-text"><%= quiz.description %></p>
                  <a href="/quizzes/quiz/<%= quiz.id %>" class="btn btn-primary">View the Quiz</a>
                </div>
              </div>
              <% } %>
            <% } %>
        </div>
        <div class="user-profile">
          <img class="profile-img" src="/docs/Profile-Male.png" alt="profile image">
          <h2>Hello <%= quizzes[0].username %></h2>
          <br><br>
          <div class="quiz-info">
            <div class="info-container">
              <h3>xx</h3>
              <h3>quiz attempts</h3>
            </div>
            <div class="info-container">
              <h3>xx </h3>
              <h3>quizzes created</h3>
            </div>
          </div>
          <div class="average-score">
            <h1 class="score">xx%</h1>
            <h3 class= "avg">average score</h3>
          </div>
        </div>
      </div>
      </form>
    </main>
    <%- include('partials/_footer') %>
</body>

</html>
