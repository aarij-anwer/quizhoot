<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Fonts -->
  <script src="https://kit.fontawesome.com/2bfd122b18.js" crossorigin="anonymous"></script>
  <style>@import url('https://fonts.googleapis.com/css2?family=Shrikhand&display=swap');</style>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/footer.css" />
  <link rel="stylesheet" href="/styles/home-page.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/home.js"></script>

  <title>Home Page</title>
</head>
<body>
  <%- include('partials/_header') %>

  <main>


    <div class="home-layout">

      <div class="quizzes">
        <div class="quiz-container">
          <div class="welcome">Welcome to the best quiz app ever!</div>
          <% for (let quiz of quizzes) { %>
            <% if (!quiz.public) { %>
              <div class="card-quiz">
                  <img class="card-img" id="random-img" src="/docs/card_04.png " alt="card image">
                  <div class="card-body">
                    <h2 class="card-title"><%= quiz.title %></h2>
                    <p class="card-text"><%= quiz.description %></p>
                    <a href="/quizzes/quiz/<%= quiz.id %>" class="primary-button right-button">View the Quiz</a>
                  </div>

              </div>
           <% } %>
          <% } %>
        </div>
      </div>
      <div class="home-profile">
        <% if (userID) { %>
        <img class="profile-img" src="/docs/profile_01.png" alt="profile image">
        <h2>Hello <%= name %></h2>
        <br><br>
        <button class="primary-button"><a href="/quizzes/user/<%-userID-%>">Go to your profile</a></button>
        <% } else { %>
          <div class="login-partial">
            <%- include('partials/_login') %>
          </div>
          <div class="register-partial">
            <%- include('partials/_register')%>
          </div>
        <% } %>
     </div>
  </main>

  <%- include('partials/_footer') %>
</body>
</html>


